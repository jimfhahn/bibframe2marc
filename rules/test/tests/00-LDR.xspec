<?xml version="1.0" encoding="UTF-8"?>

<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
               xmlns:marc="http://www.loc.gov/MARC21/slim"
               stylesheet="../../../bibframe2marc.xsl"
               xslt-version="1.0">

  <x:scenario label="Generating MARC LDR">
    <x:context href="../data/regression/bibframe.xml"/>
    <x:expect label="...pos 00-04 should be blank"
              test="substring(marc:record/marc:leader,1,5) = '     '"/>
    <x:expect label="...pos 05 determined by value of $vAdminMetadata/bf:status/bf:Status/bf:code"
              test="substring(marc:record/marc:leader,6,1) = 'n'"/>
    <x:expect label="...pos 06 determined by value of bf:Work/rdf:type/@rdf:resource"
              test="substring(marc:record/marc:leader,7,1) = 'a'"/>
    <x:expect label="...pos 07 determined by value of bf:Instance/rdf:type/@rdf:resource or rdf:RDF/bf:Instance/bf:issuance/bf:Issuance/@rdf:about"
              test="substring(marc:record/marc:leader,8,1) = 'm'"/>
    <x:expect label="...pos 08 determined by value of rdf:RDF/bf:Instance/rdf:type/@rdf:resource"
              test="substring(marc:record/marc:leader,9,1) = ' '"/>
    <x:expect label="...pos 09-16 should be 'a22#####'"
              test="substring(marc:record/marc:leader,10,8) = 'a22     '"/>
    <x:expect label="...pos 17 determined by $vAdminMetadata/bflc:encodingLevel/bflc:EncodingLevel"
              test="substring(marc:record/marc:leader,18,1) = ' '"/>
    <x:expect label="...pos 18 determined by $vAdminMetadata/bf:descriptionConventions/bf:DescriptionConventions"
              test="substring(marc:record/marc:leader,19,1) = 'a'"/>
    <x:expect label="position 19-23 should be '#4500'"
              test="substring(marc:record/marc:leader,20,5) = ' 4500'"/>
  </x:scenario>

</x:description>
